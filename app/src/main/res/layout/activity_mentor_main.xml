<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".mentor.MentorMainActivity">
    <TextView
        android:id="@+id/tvMenteesRequest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="20dp"
        android:text="Mentee Requests"
        android:textAlignment="center"
        android:textSize="20sp"
        android:padding="5dp"

        />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewMentee"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvMenteesRequest"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:listitem="@layout/item_mentee"
        />
</androidx.constraintlayout.widget.ConstraintLayout>